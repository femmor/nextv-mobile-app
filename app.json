{
  "expo": {
    "name": "NextV",
    "slug": "nextv-movie-recommendation",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ios-app-icon.png",
    "scheme": "nextv",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "privacy": "public",
    "platforms": ["ios", "android"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nextv.movierecommendation",
      "buildNumber": "1",
      "icon": "./assets/images/ios-app-icon.png",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "NextV needs access to your photo library to let you select movie poster images when sharing movie recommendations. For example, when you add a movie like 'Inception' to your recommendations, you can choose a poster image from your photos to make your recommendation more visually appealing and help other users discover great movies."
      }
    },
    "android": {
      "package": "com.nextv.movierecommendation",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#ffffff",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6dbc34bf-51da-411a-8d3b-02495b65c046"
      }
    }
  }
}
